<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_pay_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:src="@drawable/dlg_buy_time"/>
    <TextView
        android:id="@+id/tv_pay_meal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/tab_padding_l_r"
        android:textSize="@dimen/text_material"
        android:textColor="@color/pay_meal_title"
        tools:text="15分钟/￥12.00"/>

    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="@dimen/dlg_button_width"
        android:layout_height="@dimen/dlg_button_height"
        android:layout_marginTop="@dimen/pop_margin_view"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_dlg_buy"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/text_pay"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_material"/>
</LinearLayout>