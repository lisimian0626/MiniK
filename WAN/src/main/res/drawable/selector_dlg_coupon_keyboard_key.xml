<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/keyboard_key_pressed"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/keyboard_key_pressed"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/keyboard_key_pressed"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="@color/keyboard_key_pressed"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <stroke android:width="1dp" android:color="#8561f7"></stroke>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#8561f7"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>