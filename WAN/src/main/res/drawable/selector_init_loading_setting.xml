<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#90E84E4E"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#90E84E4E"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="#90E84E4E"></solid>
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1dp" android:color="#90E84E4E"></stroke>
            <!-- 矩形的圆角半径 -->
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF6767"></solid>
            <stroke android:width="1dp" android:color="#FF6767"></stroke>
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- default -->
</selector>