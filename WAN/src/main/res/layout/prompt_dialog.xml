<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_prompt_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        android:layout_marginTop="26dp"
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/prompt"
        android:textColor="#ff5959"
        android:textSize="@dimen/tab_font_size" />
    <TextView
        android:id="@android:id/text1"
        android:layout_below="@id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:textColor="#666"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal">


        <Button
            android:id="@android:id/button1"
            android:layout_width="150dp"
            android:layout_height="@dimen/dlg_button_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/selector_dlg_share"
            android:minWidth="150dp"
            android:text="@string/close"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dlg_countdown_small" />

        <Button
            android:id="@android:id/button2"
            android:layout_width="150dp"
            android:layout_height="@dimen/dlg_button_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/selector_dlg_back"
            android:minWidth="150dp"
            android:text="@android:string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dlg_countdown_small"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/dlg_select_collect_close"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
</RelativeLayout>