<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/roomlist_tv_room_num"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/background_dark"
            />
        <TextView
            android:id="@+id/roomlist_tv_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="16dp"
            android:textColor="@android:color/background_dark"
            />
        <TextView
            android:id="@+id/roomlist_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@android:color/background_dark"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/roomlist_iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cheaked"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />
</RelativeLayout>