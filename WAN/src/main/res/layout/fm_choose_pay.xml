<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coupon_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_choose_pay_title"
        style="@style/TitleStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/text_choose_pay" />
    <ImageView
        android:id="@+id/dlg_fm_pay_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dlg_select_collect_back"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_below="@id/tv_choose_pay_title"
        android:layout_marginTop="38dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:id="@+id/zhifubao_btn"
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/bg_rect_white_corner"
            >
            <ImageView
                android:id="@+id/iv_zhifubao"
                android:layout_width="130dp"
                android:layout_height="130dp"

                android:contentDescription="@null"/>
            <TextView
                style="@style/TitleStyleNormal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_pay_zhifubao" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weixin_btn"
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/bg_rect_white_corner"
            >
            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:contentDescription="@null"/>
            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_weixin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toubi_btn"
            android:layout_width="200dp"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/bg_rect_white_corner"
            >
            <ImageView
                android:id="@+id/iv_toubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_token"
                android:contentDescription="@null"/>
            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_toubi" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dlg_button_width"
        android:layout_height="@dimen/dlg_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:background="@drawable/selector_dlg_back"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/text_back"
        android:id="@+id/btn_back"
        android:visibility="gone"
        />
</RelativeLayout>