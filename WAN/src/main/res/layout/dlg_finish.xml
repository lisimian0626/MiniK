<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dlg_finish_width"
    android:layout_height="@dimen/dlg_finish_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="@dimen/dlg_finish_width"
    android:minHeight="@dimen/dlg_finish_height"
    android:background="@drawable/bg_dlg_round_white"
    android:orientation="vertical">
    <com.beidousat.karaoke.widget.CountDownTextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        style="@style/TextCountdown"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        app:maxCountDownSec="@integer/normal_countdown_sec"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        style="@style/TitleStyleSub"
        android:gravity="center"
        android:text="@string/text_finish_prompt"/>
    <TextView
        android:id="@+id/goto_share"
        android:layout_width="@dimen/dlg_button_width"
        android:layout_height="@dimen/dlg_button_height"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="200dp"
        android:clickable="true"
        android:background="@drawable/selector_dlg_share"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/text_goto_share"/>
    <TextView
        android:id="@+id/goto_continue"
        android:layout_width="@dimen/dlg_button_width"
        android:layout_height="@dimen/dlg_button_height"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="200dp"
        android:clickable="true"
        android:background="@drawable/selector_dlg_continue"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/goto_continue"/>
</RelativeLayout>