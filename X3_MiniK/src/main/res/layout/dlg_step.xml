<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="@dimen/dlg_step_width"
    android:minHeight="@dimen/dlg_step_height"
    android:orientation="vertical"
    android:background="@drawable/dlg_step_bg">

    <TextView
        android:id="@+id/close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/dlg_select_collect_close"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="天天城"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tab_font_size" />

</RelativeLayout>