<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_prompt_dialog"
    >

    <TextView
        android:id="@+id/tv_choose_pay_title"
        style="@style/TitleStyleNormal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/services" />
    <com.beidousat.libwidget.image.RecyclerImageView
        android:id="@+id/riv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/selector_dlg_close" />

    <ImageView
        android:layout_below="@id/tv_choose_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/pic_service" />
    <ImageView
        android:id="@+id/iv_service_qrcode"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="240dp"

         />
</RelativeLayout>