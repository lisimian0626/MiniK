<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coupon_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_choose_pay_title"
        style="@style/TitleStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/text_choose_pay" />
    <ImageView
        android:id="@+id/dlg_fm_pay_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dlg_select_collect_back"
        android:clickable="true"
        />

    <LinearLayout
        android:id="@+id/lin_payment3"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:id="@+id/zhifubao_btn"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_rect_white_corner"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_zhifubao"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:contentDescription="@null" />

            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_zhifubao" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weixin_btn"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_rect_white_corner"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wechat"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:contentDescription="@null" />

            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_weixin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/toubi_btn"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_rect_white_corner"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_toubi"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:contentDescription="@null"
                android:src="@drawable/pay_token" />

            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_toubi" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_btn"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_rect_white_corner"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:contentDescription="@null"
                android:src="@drawable/pic_gift" />

            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_card" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_ost"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_rect_white_corner"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ost"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:contentDescription="@null"
                android:src="@drawable/octopus" />

            <TextView
                style="@style/TitleStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/text_pay_toubi" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dlg_button_width"
        android:layout_height="@dimen/dlg_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:clickable="true"
        android:background="@drawable/selector_dlg_back"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/text_back"
        android:id="@+id/btn_back"
        android:visibility="gone"
        />

</RelativeLayout>