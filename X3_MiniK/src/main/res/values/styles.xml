<resources>


    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BottomBarIcon" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@drawable/selector_main_bottom_btn_text</item>
        <item name="android:textSize">@dimen/bottom_bar_icon_text_size</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CommonDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogScaleAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="DialogScaleAnim" parent="android:Animation">
        <!--<item name="android:windowEnterAnimation">@anim/dialog_enter</item>-->
        <!--<item name="android:windowExitAnimation">@anim/dialog_exit</item>-->
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="TitleStyleSelected">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TitleStyleNormal">
        <item name="android:textColor">@color/pay_text_normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleStyleSub">
        <item name="android:textColor">@color/pay_text_sub</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextCountdown">
        <item name="android:textColor">@color/dlg_countdown</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
