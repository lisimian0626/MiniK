<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pause_tip_view_width"
    android:layout_height="@dimen/pause_tip_view_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_pop_pause"
    android:orientation="vertical">
    <com.beidousat.karaoke.widget.CountDownTextView
        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/popup_countdown"
        android:textSize="@dimen/popup_countdown"
        app:maxCountDownSec="@integer/normal_countdown_sec"/>
    <TextView
        android:id="@+id/tv_pause_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/text_pause_residue_degree"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>
</RelativeLayout>