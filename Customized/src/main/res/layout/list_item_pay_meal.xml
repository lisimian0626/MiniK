<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pay_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:src="@drawable/dlg_buy_time" />

    <TextView
        android:id="@+id/tv_real_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tab_padding_l_r"
        android:gravity="center"
        android:textColor="@color/pay_meal_title"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bottom_bar_icon_text_size"
        android:gravity="center"
        android:textColor="@color/pay_meal_title"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_pay_meal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mood_item_margin"
        android:gravity="center"
        android:textColor="#999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="@dimen/dlg_button_width"
        android:layout_height="@dimen/dlg_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/mood_item_margin"
        android:background="@drawable/selector_dlg_buy"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/text_pay"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_material" />
</LinearLayout>